<mapper namespace="com.ibm.gbs.gbs_cai_web.mapper.EnrollmentMapper">
    <cache />
            
    <select id="getRoominfoById" resultType="com.ibm.gbs.gbs_cai_web.vo.RoomVO" parameterType="String">
    	SELECT user_id
    	     , type
    	     , room_info
    	  FROM room
    	 WHERE user_id = #{user_id}
    </select>
    
    <select id="getBusInfoById" resultType="com.ibm.gbs.gbs_cai_web.vo.BusVO" parameterType="String">
    	SELECT user_id
    	     , bus_type
    	     , bus_info
    	     , depart_time
    	  FROM bus
    	 WHERE user_id = #{user_id}
    </select>    
    
